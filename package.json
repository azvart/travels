{
  "name": "travels",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "start": "nest start",
    "start:services": "npm-run-all --parallel start:accounts",
    "start-all:dev": "npm-run-all start:services start:gateway",
    "start:gateway": "nest start --watch gateway",
    "start:accounts": "nest start --watch accounts",
    "start:weather-processor": "nest start --watch weather-processor",
    "start:websocket-gateway": "nest start --watch websocket-gateway",
    "start:travel-cards": "nest start --watch travel-cards",
    "start:debug-gateway": "nest start --debug --watch gateway",
    "start:debug-accounts": "nest start --debug --watch accounts",
    "start:prod": "node dist/apps/gateway/main",
    "start:job-processor": "nest start --watch jobs-processor",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./apps/gateway/test/jest-e2e.json",
    "proto:generate": "npx protoc --plugin=./node_modules/.bin/protoc-gen-ts_proto --ts_proto_out=libs/proto/src/generated --ts_proto_opt=nestJs=true,addGrpcMetadata=true,outputServices=grpc-js --proto_path=libs/proto/src libs/proto/src/**/*.proto"
  },
  "dependencies": {
    "@apollo/client": "^4.0.7",
    "@apollo/federation-internals": "^2.11.2",
    "@apollo/gateway": "^2.11.2",
    "@apollo/server": "^4.12.2",
    "@apollo/subgraph": "^2.11.2",
    "@confluentinc/kafka-javascript": "^1.8.0",
    "@grpc/grpc-js": "^1.14.0",
    "@grpc/proto-loader": "^0.8.0",
    "@nestjs/apollo": "^13.1.0",
    "@nestjs/bullmq": "^11.0.4",
    "@nestjs/common": "^11.0.1",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.0.1",
    "@nestjs/graphql": "^13.1.0",
    "@nestjs/jwt": "^11.0.1",
    "@nestjs/microservices": "^11.1.8",
    "@nestjs/platform-express": "^11.0.1",
    "@nestjs/platform-socket.io": "^11.1.12",
    "@nestjs/schedule": "^6.1.0",
    "@nestjs/typeorm": "^11.0.0",
    "@nestjs/websockets": "^11.1.12",
    "bcrypt": "^6.0.0",
    "bullmq": "^5.65.1",
    "cookie-parser": "^1.4.7",
    "cross-fetch": "^4.1.0",
    "graphql": "^16.11.0",
    "graphql-subscriptions": "^3.0.0",
    "graphql-ws": "^6.0.6",
    "ioredis": "^5.8.2",
    "mysql2": "^3.15.1",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "typeorm": "^0.3.27",
    "ws": "^8.19.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.1",
    "@swc/cli": "^0.6.0",
    "@swc/core": "^1.10.7",
    "@types/bcrypt": "^6.0.0",
    "@types/cookie-parser": "^1.4.10",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.7",
    "@types/supertest": "^6.0.2",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "globals": "^16.0.0",
    "jest": "^29.7.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.4.2",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "ts-proto": "^2.8.3",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/apps/",
      "<rootDir>/libs/"
    ],
    "moduleNameMapper": {
      "^@app/decorators(|/.*)$": "<rootDir>/libs/decorators/src/$1",
      "^@app/dto(|/.*)$": "<rootDir>/libs/dto/src/$1",
      "^@app/entities(|/.*)$": "<rootDir>/libs/entities/src/$1",
      "^@app/grpc-api-clients(|/.*)$": "<rootDir>/libs/grpc-api-clients/src/$1",
      "^@app/kafka(|/.*)$": "<rootDir>/libs/kafka/src/$1",
      "^@app/proto(|/.*)$": "<rootDir>/libs/proto/src/$1",
      "^@app/pubsub(|/.*)$": "<rootDir>/libs/pubsub/src/$1",
      "^@app/redis(|/.*)$": "<rootDir>/libs/redis/src/$1",
      "^@app/types(|/.*)$": "<rootDir>/libs/types/src/$1",
      "^libs/config(|/.*)$": "<rootDir>/libs/config/src/$1",
      "^libs/database(|/.*)$": "<rootDir>/libs/database/src/$1"
    }
  }
}
